general {
        colors = true
        interval = 5
}

order += "disk /"
order += "battery all"
order += "load"
order += "tztime local"

battery all {
		integer_battery_capacity = true
		status_chr = "âš¡"
		status_bat = "ðŸ”‹"
		status_unk = "?"
		status_full = "âœ“"
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%d-%m %H:%M |"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}



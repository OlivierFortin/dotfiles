#App shortcut
hyper - t : open -na /Applications/iTerm.app

# focus window
hyper - h : yabai -m window --focus west
hyper - l : yabai -m window --focus east
hyper - j : yabai -m window --focus north
hyper - k : yabai -m window --focus south

# Close Windows
hyper - q : yabai -m window --close


# Rotate
hyper - r : yabai -m space --rotate 90
hyper - o : yabai -m space --mirror x-axis
hyper - p : yabai -m space --mirror y-axis


# fast focus desktop
ctrl - x : yabai -m space --focus recent
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - n : yabai -m space --focus next || yabai -m space --focus first
ctrl - b : yabai -m space --focus prev || yabai -m space --focus last


# send window to desktop and follow focus
shift + cmd - z : yabai -m window --space next; yabai -m space --focus next
shift + cmd - 2 : yabai -m window --space  2; yabai -m space --focus 2
hyper - 1 : yabai -m window --space  1 && yabai -m space --focus 1

hyper - 1 : yabai -m window --space  1 && yabai -m space --focus 1
hyper - 2 : yabai -m window --space  2 && yabai -m space --focus 2
hyper - 3 : yabai -m window --space  3 && yabai -m space --focus 3
hyper - 4 : yabai -m window --space  4 && yabai -m space --focus 4
hyper - 5 : yabai -m window --space  5 && yabai -m space --focus 5
hyper - 6 : yabai -m window --space  6 && yabai -m space --focus 6
hyper - 7 : yabai -m window --space  7 && yabai -m space --focus 7
hyper - 8 : yabai -m window --space  8 && yabai -m space --focus 8

# focus monitor
ctrl + alt - z  : yabai -m display --focus prev
ctrl + alt - 3  : yabai -m display --focus 3

# send window to monitor and follow focus
hyper - s  : yabai -m window --display next; yabai -m display --focus next


# toggle window zoom
hyper - f : yabai -m window --toggle zoom-fullscreen
hyper - w : yabai -m window --grid 1:3:0:0:2:1
